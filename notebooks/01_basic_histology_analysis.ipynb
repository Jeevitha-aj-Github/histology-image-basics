  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "img_gray = img.convert('L')  # convert to grayscale\n",
    "plt.imshow(img_gray, cmap='gray')\n",
    "plt.axis('off')"
   ]
  }

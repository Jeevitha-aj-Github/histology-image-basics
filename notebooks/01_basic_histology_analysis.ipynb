import numpy as np

# convert grayscale image to array
gray_arr = np.array(img_gray)

# simple threshold: darker = tissue, lighter = background
threshold = gray_arr.mean()
mask = gray_arr < threshold

plt.imshow(mask, cmap='gray')
plt.axis('off')



